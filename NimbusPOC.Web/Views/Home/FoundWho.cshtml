@model NimbusPOC.Web.Controllers.FoundWhoViewModel

@using (Html.BeginForm("FoundWho", "Home", FormMethod.Post))
{
    <h2>Found You</h2>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Who, new { @class = "form-control", placeholder = "Who?" })
    </div>
    <div><input type="submit" class="btn btn-default" /></div>
}